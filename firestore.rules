rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public access to the DMs collection
    match /DMs/{documentId} {
      // Anyone can create new documents
      allow create: if true;
      
      // Only the creator can update their own document
      allow update: if request.auth != null && request.auth.uid == resource.data.createdBy;
      
      // Anyone can read documents
      allow read: if true;
    }

    // Rules for Campaign collection
    match /Campaign/{campaignId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.dmId;
    }

    // Rules for NPC collection
    match /NPC/{npcId} {
      allow create: if request.auth != null; // Allow any authenticated user to create NPCs
      allow read: if request.auth != null; // Allow any authenticated user to read NPCs
      allow update, delete: if request.auth != null && request.resource.data.dmId == request.auth.uid; // Only allow the DM to update or delete their NPCs
    }

    // Rules for Players collection
    match /Players/{playerId} {
      // Allow create if user is authenticated and is the DM of the campaign
      allow create: if request.auth != null && 
        request.resource.data.dm == request.auth.uid;
      
      // Allow read if user is authenticated and is the DM of the campaign
      allow read: if request.auth != null && 
        resource.data.dm == request.auth.uid;
      
      // Allow update if user is authenticated and is the DM of the campaign
      allow update: if request.auth != null && 
        resource.data.dm == request.auth.uid;
      
      // Allow delete if user is authenticated and is the DM of the campaign
      allow delete: if request.auth != null && 
        resource.data.dm == request.auth.uid;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}